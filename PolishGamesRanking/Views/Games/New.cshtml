@using System.Activities.Expressions
@model PolishGamesRanking.ViewModels.NewGameViewModel

@{
    ViewBag.Title = Model.Game.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Game.Title</h2>

@using (Html.BeginForm("Save", "Games", FormMethod.Post, new{enctype="multipart/form-data"}))
{
    <div class="form-group">
        <label for="Name">Nazwa</label>
        @Html.TextBoxFor(m => m.Game.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Game.Name)
    </div>
    <div class="form-group">
        <label for="GameGenre">Gatunek</label>
        @Html.DropDownListFor(m => m.Game.GameGenreId, new SelectList(Model.GameGenres, "Id", "Name"), "Wybierz gatunek", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=> m.Game.GameGenreId)
    </div>
    <div class="form-group">
        <label for="Developer">Deweloper</label>
        @Html.TextBoxFor(m => m.Game.Developer, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Publisher">Wydawca</label>
        @Html.TextBoxFor(m => m.Game.Publisher, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Data wydania</label>
        @Html.TextBoxFor(m=> m.Game.ReleaseDate, new {@type="date", @class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("Obraz", new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            <input type="file" id="image" name="image" />
        </div>
    </div>
    @Html.HiddenFor(m=>m.Id)
@*    @Html.AntiForgeryToken()*@
    <button type="submit" class="btn btn-primary">Dodaj</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
